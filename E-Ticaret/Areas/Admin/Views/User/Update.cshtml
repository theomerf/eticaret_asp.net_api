
@model UserDtoForUpdate
<div class="adminuser-container">
	<div class="adminuser-card">
		<div class="adminuser-header">
			<div class="adminuser-avatar">
				<i class="fas fa-user"></i>
			</div>
			<h1 class="adminuser-title">Kullanıcı Güncelle</h1>
			<p class="adminuser-subtitle">@Model.UserName</p>
		</div>

		<div class="adminuser-form">
			@if (ViewData.ModelState.ErrorCount > 0)
			{
				<div class="adminuser-validation-summary">
					<div class="text-danger" asp-validation-summary="All"></div>
				</div>
			}

			<form method="post" asp-action="Update">
				<div class="row">
					<div class="col-md-6">
						<div class="adminuser-form-group">
							<label asp-for="UserName" class="adminuser-form-label">Kullanıcı Adı</label>
							<input asp-for="UserName" class="adminuser-form-control" />
						</div>

						<div class="adminuser-form-group">
							<label asp-for="FirstName" class="adminuser-form-label">Ad</label>
							<input asp-for="FirstName" class="adminuser-form-control" />
						</div>

						<div class="adminuser-form-group">
							<label asp-for="LastName" class="adminuser-form-label">Soyad</label>
							<input asp-for="LastName" class="adminuser-form-control" />
						</div>

						<div class="adminuser-form-group">
							<label asp-for="LastName" class="adminuser-form-label">Soyad</label>
							<input asp-for="LastName" class="adminuser-form-control" />
						</div>

						<div class="adminuser-form-group">
							<label asp-for="BirthDate" class="adminuser-form-label">Doğum Tarihi</label>
							<input asp-for="BirthDate" type="date" class="adminuser-form-control" />
						</div>

						<div class="adminuser-form-group">
							<label asp-for="Email" class="adminuser-form-label">E-posta Adresi</label>
							<input asp-for="Email" class="adminuser-form-control" />
						</div>

						<div class="adminuser-form-group">
							<label asp-for="PhoneNumber" class="adminuser-form-label">Telefon Numarası</label>
							<input asp-for="PhoneNumber" class="adminuser-form-control" />
						</div>

						<div class="adminuser-form-group">
							<div class="adminuser-btn-group">
								<button type="submit" class="adminuser-btn adminuser-btn-primary">
									<i class="fas fa-save"></i> Kaydet
								</button>
								<a asp-action="Index" class="adminuser-btn adminuser-btn-outline">
									<i class="fas fa-arrow-left"></i> Geri Dön
								</a>
							</div>
						</div>
					</div>

					<div class="col-md-6">
						<div class="adminuser-roles-section">
							<div class="adminuser-roles-title">
								<i class="fas fa-shield-alt me-2"></i>Kullanıcı Rolleri
							</div>

							@foreach (var item in Model.Roles)
							{
								<div class="adminuser-role-item">
									<input type="checkbox" name="Roles" value="@item" checked="@(Model.UserRoles.Contains(@item))" class="adminuser-check-input" id="role-@item" />
									<label class="adminuser-check-label" for="role-@item">@item</label>
								</div>
							}

							<div class="adminuser-helper-text">
								<i class="fas fa-info-circle me-1"></i>Kullanıcı için uygun rolleri seçiniz.
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
