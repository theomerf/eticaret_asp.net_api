@model double?

@{
    var averageRating = Model != null ? Model : 0;
}
@for (int i = 1; i <= 5; i++)
{
    if (i <= Math.Floor(averageRating ?? 0))
    {
        <i class="fas fa-star"></i>
    }
    else if (i - averageRating < 1)
    {
        <i class="fas fa-star-half-alt"></i>
    }
    else
    {
        <i class="far fa-star"></i>
    }
}